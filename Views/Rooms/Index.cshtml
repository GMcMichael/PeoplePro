@model IEnumerable<PeoplePro.Models.Room>

@{
    ViewData["Title"] = "Room Index";
}

<h1>Room Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-controller="Buildings" asp-action="Details" asp-route-id="@item.BuildingID">@Html.DisplayFor(modelItem => item.Building.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departments.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employees.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
