@model PeoplePro.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building.Name)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Buildings" asp-action="Details" asp-route-id="@Model.BuildingID">@Html.DisplayFor(model => model.Building.Name)</a>
</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departments)
        </dt>
        <dd class="col-sm-10">
            <table>
                @foreach (var department in Model.Departments)
                {
                    <tr>
                        <td>
                            <a asp-controller="Departments" asp-action="Details" asp-route-id="@department.DepartmentId">@Html.DisplayFor(model => department.Department.Name)</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees)
        </dt>
        <dd class="col-sm-10">
            <table>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>
                            <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">@Html.DisplayFor(model => employee.Name)</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
